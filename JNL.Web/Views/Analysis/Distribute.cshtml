@{
    ViewBag.Title = "分布分析";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #btnSearch {
        width: 100%;
    }

    .chart-canvas {
        width: 80%;
        height: 600px;
        margin: 30px auto;
    }
</style>

<h5 class="title">@ViewBag.Title</h5>

<div id="searchBox" class="row">
    <div class="col s2 input-field">
        <div class="select-wrapper">
            <select class="initialized" id="searchType">
                <option value="1">绝对数量分布分析</option>
                <option value="2">绝对占比分布分析</option>
                <option value="3">相对数量分布分析</option>
                <option value="4">相对分值分布分析</option>
            </select>
        </div>
    </div>
    <div class="col s2 input-field">
        <input type="date" value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")" class="datepicker" id="searchStart" placeholder="开始日期"/>
    </div>
    <div class="col s2 input-field">
        <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="datepicker" id="searchEnd" placeholder="结束日期"/>
    </div>
    <div class="col s2 input-field">
        <button id="btnSearch" class="btn waves-effect waves-block waves-light" type="button">查 询</button>
    </div>
</div>

<table class="bordered data-table centered">
    <thead>
    <tr></tr>
    </thead>
    <tbody></tbody>
</table>

<div class="chart-container">
    
</div>

<script src="/node_modules/echarts/dist/echarts.js"></script>
<script src="/Scripts/page-scripts/analysis-distribute.js"></script>