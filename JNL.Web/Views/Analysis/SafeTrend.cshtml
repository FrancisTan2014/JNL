@{
    ViewBag.Title = "安全发展趋势";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #btnSearch {
        width: 100%;
    }

    .chart-box {
        height: 600px;
    }
</style>

<h5 class="title">@ViewBag.Title</h5>

<div id="searchBox" class="row center">
    <div class="col s2 input-field">
        <div class="select-wrapper">
            <select class="initialized" id="searchYear">
                @{
                    var year = DateTime.Now.Year;
                    var currentMonth = DateTime.Now.Month;

                    for (int i = 0; i < 10; i++)
                    {
                        var tempYear = year - i;
                        <option value="@tempYear">@tempYear</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="col s2 input-field">
        <div class="select-wrapper">
            <select class="initialized" id="searchDepart">
                <option value="-1">整个机务段</option>
            </select>
        </div>
    </div>
    <div class="col s2 input-field">
        <button id="btnSearch" class="btn waves-effect waves-light waves-block" type="button">查 询</button>
    </div>
</div>

<div class="row">
    <div class="col s12 chart-box">
        
    </div>
</div>

<script src="/node_modules/echarts/dist/echarts.js"></script>
<script src="/Scripts/page-scripts/analysis-safe-trend.js"></script>