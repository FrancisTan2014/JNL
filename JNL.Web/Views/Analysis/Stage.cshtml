@{
    ViewBag.Title = "安全风险问题阶段分析";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #btnSearch {
        width: 100%;
    }

    .chart-box {
        margin-top: 30px;
        width: 100%;
        height: 400px;
    }
</style>

<h5 class="title">@ViewBag.Title</h5>

<div id="searchBox">
    <div class="row">
        <div class="col s2">
            <input type="text" placeholder="阶段一起始时间" data-key="start1" id="searchStart1" class="datepicker" value="2016-01-01" />
        </div>
        <div class="col s2">
            <input type="text" placeholder="阶段一结束时间" data-key="end1" id="searchEnd1" class="datepicker" value="2016-10-31" />
        </div>
        <div class="col s2">
            <div class="select-wrapper">
                <select class="initialized" id="searchDepart">
                    <option value="-1">全段</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s2">
            <input type="text" placeholder="阶段二起始时间" data-key="start2" id="searchStart2" class="datepicker" value="2016-01-01" />
        </div>
        <div class="col s2">
            <input type="text" placeholder="阶段二结束时间" data-key="end2" id="searchEnd2" class="datepicker" value="2016-06-30" />
        </div>
        <div class="col s2">
            <button type="button" class="btn waves-effect waves-light waves-block" id="btnSearch">查 询</button>
        </div>
    </div>
</div>

<table class="bordered data-table">
    <thead>
    <tr>
        <th>风险概述</th>
        <th>一阶段日均</th>
        <th>二阶段日均</th>
        <th>一阶段总数</th>
        <th>二阶段总数</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="chart-box"></div>
<div class="chart-box"></div>

<script src="/node_modules/echarts/dist/echarts.js"></script>
<script src="/Scripts/page-scripts/analysis-stage.js"></script>