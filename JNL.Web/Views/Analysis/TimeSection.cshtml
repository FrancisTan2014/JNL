@{
    ViewBag.Title = "时间段分析";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #btnSearch {
        width: 100%;
    }

    .chart-box {
        width: 100%;
        height: 800px;
    }
</style>

<h5 class="title">@ViewBag.Title</h5>

<div id="searchBox" class="row">
    <div class="col s2 input-field">
        <div class="select-wrapper">
            <select class="initialized" id="searchType">
                <option value="1">表格形式呈现</option>
                <option value="2">图表形式呈现</option>
            </select>
        </div>
    </div>
    <div class="col s2 input-field">
        <input type="date" value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")" class="datepicker" id="searchStart" placeholder="开始日期" />
    </div>
    <div class="col s2 input-field">
        <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="datepicker" id="searchEnd" placeholder="结束日期" />
    </div>
    <div class="col s2 input-field">
        <div class="select-wrapper">
            <select class="initialized" name="DepartmentId" id="DepartmentId">
                <option value="-1">请选择</option>
            </select>
        </div>
    </div>
    <div class="col s2 input-field">
        <button id="btnSearch" class="btn waves-effect waves-block waves-light" type="button">查 询</button>
    </div>
</div>

<table class="bordered data-table">
    <thead>
        <tr>
            <th>时间</th>
            <th>红线</th>
            <th>甲Ⅰ</th>
            <th>甲Ⅱ</th>
            <th>乙</th>
            <th>丙</th>
            <th>信息</th>
            <th>合计</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div class="chart-box" style="display: none;">
    
</div>

<script src="/node_modules/echarts/dist/echarts.js"></script>
<script src="/Scripts/page-scripts/analysis-time-section.js"></script>