@{
    ViewBag.Title = "添加应急管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Scripts/plugins/wangEditor/css/wangEditor.min.css" rel="stylesheet"/>

<style>
    .clearfix {
        clear: none !important;
    }

    #Content {
        display: inline-block;
        height: 500px;
    }
</style>

<h5 class="title">@ViewBag.Title</h5>

<form class="edit-form z-depth-5">
    <div class="row">
        <div class="col s12 input-field">
            <input type="hidden" value="@ViewBag.Staff" name="CreateStaffId"/>
            <input type="text" name="Title" placeholder="标题"/>
        </div>
        <div class="col s12 input-field">
            <div class="select-wrapper">
                <select class="initialized" id="CategoryId" name="CategoryId">
                    <option value="-1">请选择分类</option>
                    <option value="2">非正常情况应急处理</option>
                    <option value="3">应急管理</option>
                    <option value="4">应急预案</option>
                </select>
            </div>
        </div>
        <div class="col s12 input-field">
            <textarea id="Content" name="Content"></textarea>
        </div>
    </div>
    <div class="row">
        <button id="btnSave" class="btn waves-effect waves-block waves-light right" type="button">保 存</button>
    </div>
</form>
<div class="bottom"></div>

<script src="/Scripts/plugins/wangEditor/js/wangEditor.min.js"></script>
<script src="/Scripts/page-scripts/add-article.js"></script>