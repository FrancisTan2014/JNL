@{
    ViewBag.Title = "机统-6活项填写";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .edit-form {
        padding-top: 20px;
    }

     #btnSave {
         width: 15%;
     }
</style>

<h5 class="title">@ViewBag.Title</h5>

<form class="edit-form z-depth-5 form-validate">
    <div class="row loco-row">
        <input type="hidden" name="LocomotiveId"/>
        <div class="col s4 input-field">
            <div class="select-wrapper">
                <select class="initialized" id="engineType">
                    <option value="-1">机车类型</option>
                </select>
            </div>
        </div>
        <div class="col s4 input-field">
            <div class="select-wrapper">
                <select class="initialized" id="modelType">
                    <option value="-1">机车车型</option>
                </select>
            </div>
        </div>
        <div class="col s4 input-field">
            <div class="select-wrapper">
                <select class="initialized" id="locoNumber">
                    <option value="-1">机车号</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s4 input-field">
            <input type="datetime" placeholder="预报时间" name="ReportTime" date-field="datetime" date-format="yyyy-MM-dd hh:mm:ss" />
        </div>
        <div class="col s4 input-field">
            <input type="hidden" name="RepairStaffId"/>
            <input type="text" placeholder="施修人" id="reportStaff" name="staff"/>
        </div>
        <div class="col s4 input-field">
            <div class="select-wrapper">
                <select class="initialized" name="LivingItemId" id="LivingItemId">
                    <option value="-1">活项归属</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s4 input-field">
            <label for="StartRepair">施修开始时间</label>
            <input type="datetime" name="StartRepair" id="StartRepair" data-field="datetime" date-format="yyyy-MM-dd hh:mm:ss"/>
        </div>
        <div class="col s4 input-field">
            <label for="EndRepair">施修结束时间</label>
            <input type="datetime" name="EndRepair" id="EndRepair" data-field="datetime" date-format="yyyy-MM-dd hh:mm:ss"/>
        </div>
        <div class="col s12 input-field">
            <label for="BrokenPlace">破损处所</label>
            <textarea class="materialize-textarea" name="BrokenPlace" id="BrokenPlace"></textarea>
        </div>
        <div class="col s12 input-field">
            <label for="RepairMethod">施修方法</label>
            <textarea class="materialize-textarea" name="RepairMethod" id="RepairMethod"></textarea>
        </div>
        <div class="col s12 input-field">
            <label for="RepairDesc">施修情况</label>
            <textarea class="materialize-textarea" name="RepairDesc" id="RepairDesc"></textarea>
        </div>
    </div>

    <div class="row">
        <button id="btnSave" class="btn waves-effect waves-light btn-large right" type="button">保 存</button>
    </div>
</form>

<div id="dtBox"></div>

<script src="/Scripts/page-scripts/add-live6.js"></script>